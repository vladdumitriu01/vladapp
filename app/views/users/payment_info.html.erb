<h1 class="display-5">Make a Payment</h1>
<%= form_with(url: make_payment_path) do |f| %>
  <div class="field">

  </div>

  <div class="form-group">
    <label for="name_input">Name</label>
    <%= f.text_field :account_name, class: 'form-control', placeholder: "Name"%>
    <small id="emailHelp" class="form-text text-muted">Enter the name of the person that will receive the transfer.</small>
  </div>
  <br>
  <div class="form-group">
    <label for="email_input">Email Address</label>
    <%= f.email_field :account_email, class: 'form-control', placeholder: "Email Address"%>
    <small id="emailHelp" class="form-text text-muted">Enter the email of the person that will receive the transfer.</small>
  </div>
  <br>
  <div class="form-group">
    <label for="description_input">Description</label>
    <%= f.text_field :description, class: 'form-control', placeholder: "Description"%>
    <small id="emailHelp" class="form-text text-muted">Enter the description of this transfer.</small>
  </div>
  <br>
  <div class="form-group">
    <label for="amount_input">Amount</label>
    <%= f.number_field :amount, class: 'form-control', placeholder: "0.00",  step: :any%>
    <small id="emailHelp" class="form-text text-muted">Enter the amount you want to transfer.</small>
  </div>
  <br>
  <div class="actions">
    <%= f.submit 'Transfer', class: 'btn btn-primary' %>
  </div>
<% end %>


